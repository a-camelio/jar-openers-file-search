<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jaropeners.PrimaryController">
   <children>
      <Label text="Jar Openers File Search" />
      <TextField promptText="Search Files" />
      <RadioButton mnemonicParsing="false" text="All the Search Terms" />
      <RadioButton mnemonicParsing="false" text="Any of the Search Terms" />
      <RadioButton mnemonicParsing="false" text="Exact Phrase" />
      <Button mnemonicParsing="false" text="Search" />
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Index Maintenance" />
      <Button alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" text="About" textAlignment="CENTER">
         <VBox.margin>
            <Insets left="300.0" top="50.0" />
         </VBox.margin></Button>
   </children>
   <effect>
      <Blend />
   </effect>
   <padding>
      <Insets bottom="50.0" left="100.0" right="100.0" top="50.0" />
   </padding>
</VBox>
